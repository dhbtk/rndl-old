  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "../build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "lib": ["dom", "es6"],
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ]
}
